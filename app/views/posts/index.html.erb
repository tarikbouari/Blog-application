<section class="ctn-post-index" >

 <div class="users">
        <div class="user-profile">
            <img class="img" src=<%= @user.photo%> alt=<%= @user.name%>>
         </div>
         <div class="container-username">
            <h2> <%= @user.name%></h2>
            <h3>Number of posts: <%= @user.posts.count%></h3>
         </div>
  </div>
    
    <% @user.recent_posts.each do |post| %>
     <a href=" /users/<%= @user.id %>/posts/<%= post.id%> ">
  <div class="ctn-post">
    <div class="post-item">
     <h3> Post <%= post.id%> </h3>
    </div>
    <div class="post-details">
      <h4><%= post.title%></h4>
      <p> <%= post.text[0...150]%></p>
    </div>
    <div class="comment-num">
      <span>Comments: <%= post.comments.count %></span>
       <span>Likes: <%= post.likes.count %></span>
    </div>
  </div>

    </a>
   <div class="user-comment">
        <% post.recent_comments.each do |comment| %>
                <div class="user-comment__content">
                            <b><%= comment.user.name %></b>
                            <span class="comment-date"><%= comment.created_at %></span>
                </div>
                     <p class="comment"><%= comment.text %></p>
                <% end %>
        </div>

     <%end%>
    <a class="btn">
  <button class="post-btn"> Pagination</button>
  </a>
</section>
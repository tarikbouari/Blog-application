<section class="container-show">
 <div class="users">
        <div class="user-profile">
            <img class="img" src=<%= @user.photo%> alt=<%= @user.name%>>
         </div>
         <div class="container-username">
            <h2> <%= @user.name%></h2>
            <h3>Number of posts: <%= @user.posts.count%></h3>
         </div>
  </div>
  <div class="ctn-bio">
  <h3> bio </h3>
  <p> <%= @user.bio %></p>
  </div>

  <% @user.recent_posts.each do |post| %>
  <div class="ctn-post">
    <div class="post-item">
     <h3> Post <%= post.id%> </h3>
    </div>
    <div class="post-details">
      <h4><%= post.title%></h4>
      <p> <%= post.text[0...150]%></p>
    </div>
    <div class="comment-num">
      <span>Comments: <%= post.comments.count %></span>
       <span>Likes: <%= post.likes.count %></span>
    </div>
  </div>
  <%end%>
  <a class="btn" href= "/users/<%= @user.id %>/posts">
  <button class="post-btn"> See All posts</button>
  </a>
</section>
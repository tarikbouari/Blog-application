<section class="user-container">
<h1 class="welcome">Welcome to the Users Page. Below is the list of users.</h1>
    
        <% @users.each do |user|%>
       <%= link_to users_path do %>
        <div class="users">
        <div class="user-profile">
            <img class="img" src=<%= user.photo%> alt=<%= user.name%>>
            <%# <%= image_tag user.photo  %> 
         </div>
         <div class="container-username">
            <h2> <%= user.name %></h2>
            <h3>Number of posts: <%= user.posts.count%></h3>
         </div>
          </div>
          <%end%>
        <%end%>
   
</section>



<section class="user-container">
<h1 class="welcome">Welcome to the Users Page. Below is the list of users.</h1>
    <div class="users">
        <% @users.each do |user|%>
        <%= link_to user do %>
        <div class="user-profile">
            <%= img src='user.photo' %>
         <div>
         <div class="container-username">
            <h2> <%= user.name %></h2>
            <h3>Number of posts <%= user.posts_counter%></h3>
         </div>
        <%end%>
         
        <%end%>
    </div>
</section>


